<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".AdminOpertationsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/adminOpglTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/adminOpglBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/adminOpglLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/adminOpglRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />




    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/adminOpglBottom"
        app:layout_constraintEnd_toStartOf="@+id/adminOpglRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/adminOpglLeft"
        app:layout_constraintTop_toBottomOf="@id/adminOpglTop"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adminemailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/custom_user_fb"
                android:drawablePadding="8dp"
                android:text="adminemail"
                android:textColor="@color/mainbackground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logoutTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="start"
                android:drawableStart="@drawable/custom_logout_fb"
                android:drawablePadding="8dp"
                android:text="Logout"
                android:textColor="@color/mainbackground"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/adminopimg"
                android:layout_gravity="center"/>



            <TextView
                android:id="@+id/loginTxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Hotel Management Admin"
                android:textColor="@color/mainbackground"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:indeterminateTint="@color/mainbackground"/>



            <Button
                android:id="@+id/roomMgmtBtn"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/mainbackground"
                android:text="Room Management"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/extraFacMgmtBtn"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/mainbackground"
                android:text="Extra Facility Management"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/promoDiscountMgmtBtn"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/mainbackground"
                android:text="Promo Codes/Discounts"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bookingsMgmtBtn"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/mainbackground"
                android:text="Bookings Management"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>