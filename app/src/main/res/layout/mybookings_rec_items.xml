<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/card_corner_curve_recitem_white"
    android:orientation="vertical">

    <!-- Item 1 -->
    <LinearLayout
        android:id="@+id/hll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recitemsglCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.73" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/recitemsglCenter"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Booked Date -->
                    <TextView
                        android:id="@+id/dateTvBookings"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:text="Date of Booking: "
                        android:textColor="@color/fragbackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dateTvBookingsVal"
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/fragbackground"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Booked Room Type -->
                    <TextView
                        android:id="@+id/roomTypeTvBookings"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:text="Room Type: "
                        android:textColor="@color/fragbackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/roomTypeTvBookingsVal"
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/fragbackground"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>


            <!-- Price -->
            <Button
                android:id="@+id/mybookingsViewbtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="View"
                android:textSize="16sp"
                android:textColor="@color/fragbackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/recitemsglCenter"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</LinearLayout>